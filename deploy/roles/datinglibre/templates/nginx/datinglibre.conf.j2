 server {
    listen [::]:80;
    listen 80;

    server_name {{ server_hostname }} www.{{ server_hostname }};

    return 301 https://www.{{ server_hostname }}$request_uri;
}

 server {
     listen [::]:443 ssl http2;
     listen 443 ssl http2;
     server_name www.{{ server_hostname }};

     ssl_certificate /etc/ssl/certs/datinglibre.crt;
     ssl_certificate_key /etc/ssl/private/datinglibre.key;

     error_log  /var/log/nginx/error.log;

     root  /var/www/datinglibre/public/;
     index index.html index.php;

     return 301 https://{{ server_hostname }}$request_uri;
}

server {
     listen 443 ssl http2;
     listen [::]:443 ssl http2;
     server_name {{ server_hostname }};

     ssl_certificate /etc/ssl/certs/datinglibre.crt;
     ssl_certificate_key /etc/ssl/private/datinglibre.key;

     error_log  /var/log/nginx/error.log;

     root  /var/www/datinglibre/public/;
     index index.html index.php;

     location / {
         try_files $uri $uri/ /index.php?$args;
     }

     location = /favicon.ico {
         log_not_found off;
         access_log off;
     }

     location ~ \.php$ {
         try_files $uri =404;
         fastcgi_split_path_info ^(.+.php)(/.+)$;
         fastcgi_pass unix:/run/php/php7.4-fpm.sock;
         fastcgi_param SCRIPT_FILENAME $realpath_root$fastcgi_script_name;
         fastcgi_param DOCUMENT_ROOT $realpath_root;
         fastcgi_read_timeout 3600;
         fastcgi_index index.php;
         fastcgi_buffers 16 16k;
         fastcgi_buffer_size 32k;
         include fastcgi_params;
         internal;
     }
}
